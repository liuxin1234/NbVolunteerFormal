<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_spcs_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/cb_spcs_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/iv_spcs_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="48px"
        android:src="@drawable/icon_right_indicator"/>

    <TextView
        android:id="@+id/tv_spcs_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/cb_spcs_1"
        android:layout_toLeftOf="@id/iv_spcs_1"
        android:layout_toStartOf="@id/iv_spcs_1"
        android:layout_toRightOf="@id/cb_spcs_1"
        android:padding="45px"
        android:textSize="48px"
        android:textStyle="bold"/>
</RelativeLayout>