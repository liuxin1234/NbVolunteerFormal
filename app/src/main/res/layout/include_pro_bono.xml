<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/underline"
    android:orientation="vertical"
    android:showDividers="middle">

    <LinearLayout
        android:id="@+id/LL_apply_area"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/linearlayout_select"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="45px"
            android:text="@string/tv_area"
            android:textSize="48px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_register_pro_bono_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:padding="45px"
            android:textSize="48px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/imageview_bottom_mark_marginright"
            android:src="@drawable/icon_right_indicator" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_apply_ORG"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/linearlayout_select"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="45px"
            android:text="@string/tv_organization"
            android:textSize="48px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_register_pro_bono_ORG"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:padding="45px"
            android:textSize="48px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/imageview_bottom_mark_marginright"
            android:src="@drawable/icon_right_indicator" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_PoliticalAttribute"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/linearlayout_select"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="45px"
            android:text="@string/tv_politics_status"
            android:textSize="48px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_register_pro_bono_polity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:padding="45px"
            android:textSize="48px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/imageview_bottom_mark_marginright"
            android:src="@drawable/icon_right_indicator" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_intention_time"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/linearlayout_select"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="45px"
            android:text="@string/tv_intention_time"
            android:textSize="48px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_register_pro_bono_serviceTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:padding="45px"
            android:textSize="48px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/imageview_bottom_mark_marginright"
            android:src="@drawable/icon_right_indicator" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_intention_type"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/linearlayout_select"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="45px"
            android:text="@string/tv_intention_type"
            android:textSize="48px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_register_pro_bono_serviceType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:padding="45px"
            android:textSize="48px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/imageview_bottom_mark_marginright"
            android:src="@drawable/icon_right_indicator" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_professional_ability"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/linearlayout_select"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="45px"
            android:text="@string/tv_professional_ability"
            android:textSize="48px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_register_pro_bono_major"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:padding="45px"
            android:textSize="48px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/imageview_bottom_mark_marginright"
            android:src="@drawable/icon_right_indicator" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_work_unit"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/bg_single_input"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="45px"
            android:text="@string/tv_work_unit"
            android:textSize="48px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_register_workUnit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="45px"
            android:layout_marginRight="45px"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:hint="在此输入您的工作单位"
            android:singleLine="true"
            android:textSize="48px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_family_address"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/bg_single_input"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="45px"
            android:text="@string/tv_family_address"
            android:textSize="48px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_register_Addr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="45px"
            android:layout_marginRight="45px"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:hint="在此输入您的家庭住址"
            android:singleLine="true"
            android:textSize="48px" />
    </LinearLayout>


</LinearLayout>