<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450px"
            android:background="@color/colorShadllowCyan"
            android:orientation="vertical">

            <!--  <ImageView
                  android:id="@+id/imageview_organization_icon"
                  android:layout_width="match_parent"
                  android:layout_height="150dp"
                  android:layout_margin="8dp"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="450px"
                android:layout_margin="24px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_orgination_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="24px"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textColor="@color/colorWhite"
                    android:textSize="60px"/>

                <TextView
                    android:id="@+id/tv_orgination_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="24px"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:textColor="@color/colorWhite"
                    android:textSize="48px"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000"/>

        <com.example.renhao.wevolunteer.view.SlidingTabLayout
            android:id="@+id/slidtab_organization_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="6px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpage_organization_pager"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
        </android.support.v4.view.ViewPager>
    </com.zhy.autolayout.AutoLinearLayout>
</LinearLayout>